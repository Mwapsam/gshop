<%= form_with url: order_details_path do |f| %>
    <%= f.hidden_field :product_id, value: @product %>
    <%= f.hidden_field :order_id, value: @order %>
    <%= f.select(:quantity, options_for_select([["1", 1], ["2", 2], ["3", 3], ["4", 4]], 1), onchange: "this.form.submit()") %>
    <%= f.submit "Quantity" %>
<% end %>